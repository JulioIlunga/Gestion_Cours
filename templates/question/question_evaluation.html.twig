            <input type="hidden" name="_token" value="{{ csrf_token('delete_question_' ~ question.id) }}">
            <button type="submit" class="btn btn-danger btn-sm">
                <i class="fas fa-trash"></i>
            </button>
        </form>  #}           
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune question pour le moment.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}                                    