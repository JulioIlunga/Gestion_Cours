{% extends 'template.html.twig' %}

{% block title %}Liste des Questions{% endblock %}

{% block body %}

{% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <div class="container">
        <h2>Classe : {{ classe }}</h2> 
        <h2>Évaluation : {{ evaluation.nom_evaluation }}</h2>
        <br>
        <h1>Liste des questions</h1> 
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>Énoncé</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
    {% for question in questions %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>
                {{ question.enonceQuestion }}
                {% if question.type == 'choix_multiple' and question.assertions %}
                    <ul>
                        {% for assertion in question.assertions %}
                            <li>{{ assertion }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </td>
            <td>
                <a href="{{ path('question_edit', { 'id': question.id, 'classId': classe.id, 'evaluationId': evaluation.id }) }}" class="btn btn-warning btn-sm" title="Modifier la question">
                    <i class="fas fa-edit"></i>
                </a>
                <form action="{{ path('question_delete', { 'id': question.id, 'classId': classe.id, 'evaluationId': evaluation.id }) }}" method="post" style="display: inline-block;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete_question_' ~ question.id) }}">
                    <button type="submit" class="btn btn-danger btn-sm" title="Supprimer la question" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette question ?');">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3" class="text-center">Aucune question disponible.</td>
        </tr>
    {% endfor %}
</tbody>
        </table>
        <a href="{{ path('question_new', {'classId': classe.id, 'evaluationId': evaluation.id}) }}" class="btn btn-success mb-3">Ajouter une nouvelle question</a>
    </div>
{% endblock %}