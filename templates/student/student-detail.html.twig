{% extends 'template.html.twig' %}

{% block title %}Détails de l'élève{% endblock %}

{% block body %}
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body text-center">
          <img src="{{ asset('uploads/images/' ~ student.photoFilename) }}" alt="Photo de l'étudiant" class="img-fluid rounded-circle mb-3"> 
          <h3>{{ student.firstname }} {{ student.name }}</h3>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4>Détails sur l'élève</h4>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Genre:</strong> {{ student.gender }}</li>
            <li class="list-group-item"><strong>Date de naissance:</strong> {{ student.birthDate|date('d/m/Y') }}</li>
            <li class="list-group-item"><strong>Lieu de naissance:</strong> {{ student.placeOfBirth }}</li>
            <li class="list-group-item"><strong>Téléphone parent:</strong> {{ student.parentPhone }}</li>
            <li class="list-group-item"><strong>Adresse:</strong> {{ student.adress }}</li>
            {# <li class="list-group-item"><strong>Classe:</strong> {{ student.classId }}</li>  #}
            <li class="list-group-item"><strong>Moyenne générale:</strong> {{ student.generaleAverage }}</li>
          </ul>
        </div>
      </div>
      <div class="mt-3">
        <a href="{{ path('student-list') }}" class="btn btn-secondary">Retour à la liste des élèves</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}